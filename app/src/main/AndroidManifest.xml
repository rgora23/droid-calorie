<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rohan.droid_calorie">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller.DashActivity"
            android:label="@string/title_activity_dash"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Controller.MacroActivity"
            android:label="@string/title_activity_macro"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Controller.AccountActivity"
            android:label="@string/title_activity_account"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Controller.DayDetail"
            android:label="@string/title_activity_day_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Controller.FoodActivity"
            android:label="@string/title_activity_food"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
